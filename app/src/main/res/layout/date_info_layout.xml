<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#FAFAFA"
    android:id="@+id/relative_open">

    <ImageView
        android:id="@+id/clock"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_access_time_24"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/dayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/data_info_startFragment"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/clock"
        android:text="ПОНЕДЕЛЬНИК"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/data_info_startFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/clock"
        android:text="12.12.21"
        android:textColor="#727272"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/numberOfRecords_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:text="0"
        android:textColor="#727272"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DADADA"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/openDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Тут id"
        android:textColor="#00FDFDFD" />
</RelativeLayout>