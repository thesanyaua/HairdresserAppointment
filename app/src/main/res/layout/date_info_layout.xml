<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    app:cardCornerRadius="10dp"
    android:id="@+id/cardView_open"
    android:layout_marginTop="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#F6F6F6">


        <TextView
            android:id="@+id/dayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/green_them"
            android:paddingLeft="15dp"
            android:text="ПОНЕДЕЛЬНИК"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/data_info_startFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dayName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:text="12.12.21"
            android:textColor="#727272"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numberOfRecords_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dayName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="0"
            android:layout_marginTop="4dp"
            android:textColor="#727272"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/openDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Тут id"
            android:textColor="#00FDFDFD" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>